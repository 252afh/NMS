@model IEnumerable<NMS.Models.NumberViewModels.Number>

@{
    ViewData["Title"] = "Numbers";
}

@section scripts {
    <script type="text/javascript">

        $(document).ready(function () {

            $('table').tablesorter({
                theme: "dropbox"
            });

        });

    </script>

    <script src="@Url.Content("~/js/jquery.tablesorter.min.js")" type="text/javascript"></script>
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/Tablesorter Css/theme.dropbox.css" />
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript" src="~/js/jquery.tablesorter.min.js"></script>
    <script type="text/javascript" src="~/js/jquery.tablesorter.widgets.js"></script>
</head>
<body>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="tablesorter">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Number1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FkCustomer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FkGroup)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ActiveDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CeaseDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Number1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FkCustomer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FkGroup)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ActiveDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CeaseDate)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>